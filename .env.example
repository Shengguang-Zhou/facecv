# FaceCV Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=FaceCV
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=7000
API_PREFIX=/api/v1
WORKERS=4

# Database Configuration
DB_TYPE=mysql
# DB_TYPE=sqlite
# DB_TYPE=chromadb

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=facecv
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=facecv
MYSQL_POOL_SIZE=10
MYSQL_POOL_RECYCLE=3600

# SQLite Configuration (if DB_TYPE=sqlite)
SQLITE_PATH=./data/facecv.db

# ChromaDB Configuration (if DB_TYPE=chromadb)
CHROMADB_PERSIST_DIR=./data/chromadb
CHROMADB_COLLECTION=face_embeddings

# Face Recognition Settings
RECOGNITION_THRESHOLD=0.6
MAX_FACES_PER_IMAGE=10
FACE_MIN_SIZE=20
FACE_QUALITY_THRESHOLD=0.7

# Model Configuration
MODEL_BACKEND=insightface
# MODEL_BACKEND=deepface
MODEL_NAME=buffalo_l
EMBEDDING_SIZE=512
USE_GPU=false
GPU_DEVICE_ID=0

# Video Processing
VIDEO_FPS=10
VIDEO_SKIP_FRAMES=2
VIDEO_BUFFER_SIZE=5
MAX_VIDEO_DURATION=300

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.gif
UPLOAD_PATH=./uploads

# Performance Settings
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_BATCH_SIZE=32
REQUEST_TIMEOUT=30

# Security Settings
ENABLE_AUTH=false
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
ENABLE_PROFILING=false

# External Services
REDIS_URL=redis://localhost:6379/0
ELASTICSEARCH_URL=http://localhost:9200

# Cloud Storage (Optional)
USE_S3=false
S3_BUCKET=facecv-uploads
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Notification Settings
ENABLE_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL=admin@example.com

# Backup Configuration
ENABLE_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups