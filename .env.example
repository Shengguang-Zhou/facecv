# FaceCV Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
FACECV_APP_NAME=FaceCV
FACECV_ENVIRONMENT=production
FACECV_DEBUG=false
FACECV_LOG_LEVEL=INFO
FACECV_SECRET_KEY=your-secret-key-here

# API Configuration
FACECV_HOST=0.0.0.0
FACECV_PORT=7000
FACECV_API_PREFIX=/api/v1
FACECV_WORKERS=4

# Database Configuration
FACECV_DB_TYPE=mysql
# FACECV_DB_TYPE=sqlite
# FACECV_DB_TYPE=chromadb

# MySQL Configuration
FACECV_MYSQL_HOST=localhost
FACECV_MYSQL_PORT=3306
FACECV_MYSQL_USER=facecv
FACECV_MYSQL_PASSWORD=your-mysql-password
FACECV_MYSQL_DATABASE=facecv
FACECV_DB_POOL_SIZE=10
FACECV_DB_POOL_RECYCLE=3600

# SQLite Configuration (if FACECV_DB_TYPE=sqlite)
FACECV_SQLITE_FILENAME=./data/facecv.db

# ChromaDB Configuration (if FACECV_DB_TYPE=chromadb)
FACECV_CHROMADB_DIRNAME=./data/chromadb
FACECV_CHROMADB_COLLECTION_NAME=face_embeddings

# Face Recognition Settings
FACECV_RECOGNITION_THRESHOLD=0.6
FACECV_MAX_FACES_PER_IMAGE=10
FACECV_FACE_MIN_SIZE=20
FACECV_FACE_QUALITY_THRESHOLD=0.7

# InsightFace Configuration
FACECV_INSIGHTFACE_MODEL_PACK=buffalo_l
FACECV_INSIGHTFACE_DET_SIZE=[640,640]
FACECV_INSIGHTFACE_DET_THRESH=0.5
FACECV_INSIGHTFACE_SIMILARITY_THRESH=0.35
FACECV_INSIGHTFACE_ENABLE_EMOTION=true
FACECV_INSIGHTFACE_ENABLE_MASK=true
FACECV_INSIGHTFACE_PREFER_GPU=true

# ArcFace Configuration
FACECV_ARCFACE_ENABLED=false
FACECV_ARCFACE_BACKBONE=resnet50
FACECV_ARCFACE_DATASET=webface600k
FACECV_ARCFACE_EMBEDDING_SIZE=512
FACECV_ARCFACE_WEIGHTS_DIR=./weights/arcface

# DeepFace Configuration
FACECV_DEEPFACE_MODEL=VGG-Face
FACECV_DEEPFACE_DETECTOR=opencv
FACECV_DEEPFACE_DISTANCE_METRIC=cosine

# Video Processing
FACECV_VIDEO_FPS=10
FACECV_VIDEO_SKIP_FRAMES=2
FACECV_VIDEO_BUFFER_SIZE=5
FACECV_MAX_VIDEO_DURATION=300

# File Upload Settings
FACECV_MAX_UPLOAD_SIZE=10485760  # 10MB
FACECV_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.bmp,.gif
FACECV_UPLOAD_DIR=./uploads

# Paths Configuration
FACECV_DATA_DIR=./data
FACECV_MODELS_DIR=./models
FACECV_TEMP_DIR=./temp

# Performance Settings
FACECV_ENABLE_CACHE=true
FACECV_CACHE_TTL=3600
FACECV_MAX_BATCH_SIZE=32
FACECV_REQUEST_TIMEOUT=30

# Security Settings
FACECV_ENABLE_AUTH=false
FACECV_API_KEY=your-api-key-here
FACECV_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
FACECV_RATE_LIMIT_ENABLED=false
FACECV_RATE_LIMIT_REQUESTS=100
FACECV_RATE_LIMIT_PERIOD=60

# Monitoring
FACECV_ENABLE_METRICS=true
FACECV_METRICS_PORT=9091
FACECV_ENABLE_PROFILING=false

# External Services
FACECV_REDIS_URL=redis://localhost:6379/0
FACECV_ELASTICSEARCH_URL=http://localhost:9200

# Cloud Storage (Optional)
FACECV_USE_S3=false
FACECV_S3_BUCKET=facecv-uploads
FACECV_S3_REGION=us-east-1
FACECV_AWS_ACCESS_KEY_ID=your-access-key
FACECV_AWS_SECRET_ACCESS_KEY=your-secret-key

# Notification Settings
FACECV_ENABLE_NOTIFICATIONS=false
FACECV_SMTP_HOST=smtp.gmail.com
FACECV_SMTP_PORT=587
FACECV_SMTP_USER=your-email@gmail.com
FACECV_SMTP_PASSWORD=your-email-password
FACECV_ALERT_EMAIL=admin@example.com

# Backup Configuration
FACECV_ENABLE_BACKUP=false
FACECV_BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
FACECV_BACKUP_RETENTION_DAYS=7
FACECV_BACKUP_PATH=./backups
